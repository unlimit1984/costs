         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.javapro.costs</groupId>
    <artifactId>costs</artifactId>
    <version>1.0-SNAPSHOT</version>

    <packaging>war</packaging>
    <name>Costs</name>
    <url>http://team4you.ru/costs</url>


    <properties>
        <!--1st approach-->
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <!--2nd approach-->
        <!--<java.version>1.8</java.version>-->

        <failOnMissingWebXml>false</failOnMissingWebXml>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <junit.version>4.12</junit.version>

        <!--<spring.security.version>5.0.2.RELEASE</spring.security.version>-->

        <!--<spring.version>4.3.14.RELEASE</spring.version>-->
        <spring.version>5.0.2.RELEASE</spring.version>

        <spring-data-jpa.version>1.11.10.RELEASE</spring-data-jpa.version>
        <!--<spring-data-jpa.version>2.0.4.RELEASE</spring-data-jpa.version>-->

        <!--<hibernate.version>5.0.12.Final</hibernate.version>-->
        <hibernate.version>5.2.13.Final</hibernate.version>


        <thymeleaf.version>3.0.9.RELEASE</thymeleaf.version>
        <lombok.version>1.16.16</lombok.version>

    </properties>


    <build>
        <finalName>costs</finalName>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <!--2nd approach-->
                    <!--<source>${java.version}</source>-->
                    <!--<target>${java.version}</target>-->
                    <!--<annotationProcessorPaths>-->
                        <!--<path>-->
                            <!--<groupId>org.projectlombok</groupId>-->
                            <!--<artifactId>lombok</artifactId>-->
                            <!--<version>${lombok.version}</version>-->
                        <!--</path>-->
                    <!--</annotationProcessorPaths>-->
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <path>/costs</path>
                </configuration>
            </plugin>

            <!--coverall plugin-->
            <plugin>
                <groupId>org.eluder.coveralls</groupId>
                <artifactId>coveralls-maven-plugin</artifactId>
                <version>4.3.0</version>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <format>xml</format>
                    <maxmem>256m</maxmem>
                    <!-- aggregated reports for multi-module projects -->
                    <aggregate>true</aggregate>
                </configuration>
            </plugin>

        </plugins>


    </build>

